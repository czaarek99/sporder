<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="SpotifyTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/spotify_rounded</item>
        <item name="fontPath">fonts/CircularStd-Bold.otf</item>
    </style>

    <style name="SpotifyTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/glueGreen</item>
        <item name="colorPrimaryDark">@color/glueGreenDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/backgroundBlack</item>
        <item name="android:colorForeground">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/backgroundBlack</item>
        <item name="android:buttonStyle">@style/SpotifyTheme.Button</item>
        <item name="buttonStyle">@style/SpotifyTheme.Button</item>
    </style>

</resources>
